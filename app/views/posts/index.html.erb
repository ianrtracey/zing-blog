<div id="posts">
  <% @posts.each do |post| %>
  <div id="post">
    <h3><%= link_to post.title, post %></h3>
    <%= simple_format post.body %>
    <small>
      <%= link_to 'Edit', edit_post_path(post) %> |
      <%= link_to 'Destroy', post, method: :delete %>
    </small>
  </div>
  <% end %>
</div>

<%= link_to 'New Post', new_post_path %>     