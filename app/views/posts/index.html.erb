<% n = 0 %>
<!-- Displaying Post Archive (Number value is iterated with posts) -->
  <% @posts.each do |post| %>
  <div id="post">
    <h3><small><%= n %>.</small><%= link_to post.title, post %></h3>
    <% if user_signed_in? %>
    <small>
      <%= link_to 'Edit', edit_post_path(post) %> |
      <%= link_to 'Destroy', post, method: :delete %>
    </small>
    <% end %>
  </div>
  <% n+=1 %>
  <% end %>
<% if user_signed_in? %>
<%= link_to 'New Post', new_post_path %>
<% end %>   

</div  